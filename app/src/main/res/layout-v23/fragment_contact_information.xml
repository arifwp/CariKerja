<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.profile.profile_details.contact_information.ContactInformationFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_30"
                    android:src="@drawable/ic_back"
                    android:foreground="?android:attr/actionBarItemBackground"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/title_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_information"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:layout_toEndOf="@+id/ic_back"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_centerVertical="true" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/save"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="@dimen/dimen_10"
                    android:padding="@dimen/dimen_0"
                    android:includeFontPadding="false"
                    android:stateListAnimator="@null"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:layout_marginHorizontal="@dimen/dimen_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/wrap_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_24"
        app:layout_constraintTop_toBottomOf="@+id/illustration_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/phone"
            android:textColor="@color/primary_text" />

        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_54"
            android:layout_weight="0.98"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:hint="@string/example_phone"
            android:textColor="@color/primary_text"
            android:drawableStart="@drawable/ic_phone"
            android:drawableTint="@color/primary_text"
            android:inputType="phone"
            android:drawablePadding="@dimen/dimen_6"
            android:paddingVertical="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_10"
            android:background="@drawable/bg_ed" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrap_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_24"
        app:layout_constraintTop_toBottomOf="@+id/illustration_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/email"
            android:textColor="@color/primary_text" />

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_54"
            android:layout_weight="0.98"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:hint="@string/example_email"
            android:textColor="@color/primary_text"
            android:drawableStart="@drawable/ic_email"
            android:drawableTint="@color/primary_text"
            android:inputType="textEmailAddress"
            android:drawablePadding="@dimen/dimen_6"
            android:paddingVertical="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_10"
            android:background="@drawable/bg_ed" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrap_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_24"
        app:layout_constraintTop_toBottomOf="@+id/illustration_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/address"
            android:textColor="@color/primary_text" />

        <EditText
            android:id="@+id/ed_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_32"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:gravity="top|start"
            android:hint="@string/example_job_address"
            android:textColor="@color/primary_text"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="@color/primary_text"
            android:inputType="textMultiLine"
            android:drawablePadding="@dimen/dimen_10"
            android:paddingVertical="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_10"
            android:background="@drawable/bg_ed" />

    </LinearLayout>

</LinearLayout>