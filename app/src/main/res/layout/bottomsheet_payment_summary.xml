<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_bottomsheet_payment_summary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_summary"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginStart="@dimen/dimen_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginHorizontal="@dimen/dimen_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_up"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/secondary_text"
            android:includeFontPadding="false"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rp"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/primary_text"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_20000"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/primary_text"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dimen_6"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginHorizontal="@dimen/dimen_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_fee"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/secondary_text"
            android:includeFontPadding="false"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rp"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/primary_text"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_20000"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/primary_text"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dimen_6"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginHorizontal="@dimen/dimen_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/secondary_text"
            android:includeFontPadding="false"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rp"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/primary_text"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_50000"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/primary_text"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dimen_6"/>

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_top_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_54"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/top_up"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="@dimen/dimen_10"
        android:stateListAnimator="@null"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:layout_marginBottom="@dimen/dimen_42"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</LinearLayout>